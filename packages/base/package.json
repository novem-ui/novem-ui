    "@types/lodash.get": "^4.4.6",
    "@types/novem-theme": "^0.0.2-alpha.2"
  },
  "peerDependencies": {
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "@novem-ui/theme": "^0.0.1-alpha.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "dependencies": {
    "csstype": "^3.0.8",
    "lodash.get": "^4.4.2"
